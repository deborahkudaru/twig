{% extends "layout/base.twig" %}

{% block content %}
<div class="min-h-screen bg-gray-50 flex items-center justify-center px-4">
  <div class="max-w-md w-full bg-white p-8 rounded-lg shadow-lg border border-gray-100">

    {% if msg == 'session_expired' %}
      <div class="text-red-700 px-4 py-3 rounded mb-6 text-center">
        Your session has expired.
      </div>
    {% endif %}

    <div class="text-center mb-8">
      <h2 class="text-3xl font-bold text-gray-900">Login</h2>
    </div>

    <form action="/auth/login" method="POST" class="space-y-6">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
        <input
          type="email"
          name="email"
          value="{{ form.email|default('') }}"
          placeholder="Enter your email"
          class="w-full border rounded-lg px-4 py-3 focus:outline-none focus:ring-2 transition-colors
          {{ errors.email ? 'border-red-400 focus:ring-red-300' : 'border-gray-300 focus:ring-slate-600 focus:border-transparent' }}"
        />
        {% if errors.email %}
          <p class="text-red-600 text-sm mt-2">{{ errors.email }}</p>
        {% endif %}
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Password</label>
        <input
          type="password"
          name="password"
          placeholder="Enter your password"
          class="w-full border rounded-lg px-4 py-3 focus:outline-none focus:ring-2 transition-colors
          {{ errors.password ? 'border-red-400 focus:ring-red-300' : 'border-gray-300 focus:ring-slate-600 focus:border-transparent' }}"
        />
        {% if errors.password %}
          <p class="text-red-600 text-sm mt-2">{{ errors.password }}</p>
        {% endif %}
      </div>

      {% if errors.general %}
        <p class="text-red-600 text-center text-sm">{{ errors.general }}</p>
      {% endif %}

      <button
        type="submit"
        class="w-full bg-slate-600 hover:bg-slate-700 text-white font-medium py-3 px-4 rounded-lg transition-colors duration-200"
      >
        Login
      </button>
    </form>

    <div class="mt-6 text-center">
      <p class="text-gray-600">
        Donâ€™t have an account?
        <a href="/auth/signup" class="text-slate-600 hover:text-slate-800 font-medium transition-colors">Sign up</a>
      </p>
    </div>
  </div>
</div>
{% endblock %}
